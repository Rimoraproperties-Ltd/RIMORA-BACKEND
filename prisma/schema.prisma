model Property {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  price       Float
  location    String
  media       Media[]   @relation("PropertyMedia")
  inquiries   Inquiry[] @relation("PropertyInquiries")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Media {
  id          Int       @id @default(autoincrement())
  url         String
  property    Property? @relation("PropertyMedia", fields: [propertyId], references: [id])
  propertyId  Int?
}

model Inquiry {
  id          Int       @id @default(autoincrement())
  name        String
  email       String
  message     String
  property    Property? @relation("PropertyInquiries", fields: [propertyId], references: [id])
  propertyId  Int?
  createdAt   DateTime  @default(now())
}
